{
  "name": "jsac2023-sbom-workshop",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "extensions": ["ms-python.python", "visualstudioexptteam.vscodeintellicode"],
  "remoteUser": "vscode",
  // "forwardPorts": [8000, 8080],
  "settings": {
    "python.defaultInterpreterPath": "/workspaces/jsac2023-sbom-workshop/.venv/bin/python",
    "terminal.integrated.profiles.linux": {
      "bash": {
        "path": "/bin/bash"
      }
    },
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "postCreateCommand": "bash /app/postCreateCommand.sh",
  "postStartCommand": "bash /app/postStartCommand.sh"
}
